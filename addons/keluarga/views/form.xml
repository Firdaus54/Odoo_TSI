<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Tree View -->
        <record id="tsi_form_view_tree" model="ir.ui.view">
            <field name="name">tsi.form.view.tree</field>
            <field name="model">tsi.form</field>
            <field name="arch" type="xml">
                <tree string="Data Form 17021">
                    <field name="id_dokumen"/>
                    <field name="name"/>
                    <field name="nomor_dokumen"/>
                    <field name="attachment"/>
                    <field name="user_id" optional="show" widget="many2one_avatar_user"/>
                    <field name="original_date"/>
                    <field name="revisi_date"/>
                </tree>
            </field>
        </record>

        <record id="tsi_form_view_form" model="ir.ui.view">
            <field name="name">tsi.form.view.form</field>
            <field name="model">tsi.form</field>
            <field name="arch" type="xml">
                <form string="Data Form 17021">
                    <sheet>
                        <group col='4'>
                            <field name="id_dokumen"/>
                            <field name="name"/>
                            <field name="nomor_dokumen"/>
                            <field name="edition_number"/>
                            <field name="revisi_number"/>
                            <field name="original_date"/>
                            <field name="revisi_date"/>
                            <!-- <field name="initial_date"/>
                            <field name="upload_date"/> -->
                            <field name="approval_by"/>
                            <field name="approval_date"/>
                            <field name="user_id" domain="[('groups_id', '=', {}), ('share', '=', False), ('company_ids', '=', company_id)]" optional="show" widget="many2one_avatar_user"/>
                            <field name="attachment" filename="file_name" widget="pdf_viewer"/>
                            <field name="file_name"   attrs="{'invisible':True}"/>
                            <field name="company_id" attrs="{'invisible':True}"/>
                        </group>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Action for the Tree View -->
         <record id="tsi_form_action" model="ir.actions.act_window">
            <field name="name">Form 17021</field>
            <field name="type">ir.actions.act_window</field>
            <field name="res_model">tsi.form</field>
