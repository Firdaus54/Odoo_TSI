        <!-- tsi.mandays.auditor form view -->
        <record id="mandyas_audiotr_view_form" model="ir.ui.view">
            <field name="name">mandays.auditor.view.form</field>
            <field name="model">mandays.auditor</field>
            <field name="arch" type="xml">
                <form string="Mandays Auditor">
                    <sheet>
                        <group>
                            <div class="oe_title">
                                <table class="table table-sm table-bordered" style="border: 2px solid #000; width: 100%;">
                                    <thead>
                                        <tr>
                                            <th style="font-weight: bold; border: 2px solid #000; width: 30%;">Field</th>
                                            <th style="font-weight: bold; border: 2px solid #000;">Value</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        <tr>
                                            <td style="font-weight: bold; border: 2px solid #000; width: 30%;">
                                                <label for="name_auditor">Auditor Name</label>
                                            </td>
                                            <td style="border: 2px solid #000;">
                                                <field name="name_auditor"
                                                    domain="[('department_id.name', 'in', ['OPERATION ICT', 'OPERATION XMS', 'Auditor Subcont'])]"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight: bold; border: 2px solid #000; width: 30%;">
                                                <label for="auditor_ir">Auditor IR</label>
                                            </td>
                                            <td style="border: 2px solid #000;">
                                                <field name="auditor_ir"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight: bold; border: 2px solid #000; width: 30%;">
                                                <label for="auditor_er">Auditor ER</label>
                                            </td>
                                            <td style="border: 2px solid #000;">
                                                <field name="auditor_er"/>
                                            </td>
                                        </tr>
                                        <tr>
                                            <td style="font-weight: bold; border: 2px solid #000; width: 30%;">
                                                <label for="harga_mandays">Harga Mandays</label>
                                            </td>
                                            <td style="border: 2px solid #000;">
                                                <field name="harga_mandays"/>
                                            </td>
                                        </tr>
                                    </tbody>
                                </table>
                            </div>
                        </group>
                    </sheet>
                </form>
            </field>
